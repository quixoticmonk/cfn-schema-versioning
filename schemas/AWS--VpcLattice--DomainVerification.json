{
  "additionalIdentifiers": [
    [
      "/properties/Id"
    ],
    [
      "/properties/DomainName"
    ]
  ],
  "additionalProperties": false,
  "createOnlyProperties": [
    "/properties/DomainName"
  ],
  "definitions": {
    "Tag": {
      "additionalProperties": false,
      "properties": {
        "Key": {
          "maxLength": 128,
          "minLength": 1,
          "type": "string"
        },
        "Value": {
          "maxLength": 256,
          "minLength": 1,
          "type": "string"
        }
      },
      "required": [
        "Key"
      ],
      "type": "object"
    },
    "TxtMethodConfig": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "description": "Creates a Lattice Domain Verification",
  "handlers": {
    "create": {
      "permissions": [
        "vpc-lattice:StartDomainVerification",
        "vpc-lattice:GetDomainVerification",
        "vpc-lattice:TagResource",
        "vpc-lattice:ListTagsForResource"
      ]
    },
    "delete": {
      "permissions": [
        "vpc-lattice:DeleteDomainVerification",
        "vpc-lattice:GetDomainVerification",
        "vpc-lattice:UntagResource"
      ]
    },
    "list": {
      "permissions": [
        "vpc-lattice:ListDomainVerifications"
      ]
    },
    "read": {
      "permissions": [
        "vpc-lattice:GetDomainVerification",
        "vpc-lattice:ListTagsForResource"
      ]
    },
    "update": {
      "permissions": [
        "vpc-lattice:StartDomainVerification",
        "vpc-lattice:GetDomainVerification",
        "vpc-lattice:TagResource",
        "vpc-lattice:UntagResource",
        "vpc-lattice:ListTagsForResource"
      ]
    }
  },
  "primaryIdentifier": [
    "/properties/Arn"
  ],
  "properties": {
    "Arn": {
      "maxLength": 2048,
      "minLength": 20,
      "pattern": "^arn:[a-z0-9\\-]+:vpc-lattice:[a-zA-Z0-9\\-]+:\\d{12}:domainverification/dv-[0-9a-z]{17}$",
      "type": "string"
    },
    "DomainName": {
      "maxLength": 255,
      "minLength": 3,
      "type": "string"
    },
    "Id": {
      "maxLength": 2048,
      "minLength": 20,
      "pattern": "^((dv-[0-9a-z]{17})|(arn:[a-z0-9\\-]+:vpc-lattice:[a-zA-Z0-9\\-]+:\\d{12}:domainverification/dv-[0-9a-z]{17}))$",
      "type": "string"
    },
    "Status": {
      "enum": [
        "VERIFIED",
        "PENDING",
        "VERIFICATION_TIMED_OUT"
      ],
      "type": "string"
    },
    "Tags": {
      "insertionOrder": false,
      "items": {
        "$ref": "#/definitions/Tag"
      },
      "maxItems": 50,
      "minItems": 0,
      "type": "array",
      "uniqueItems": true
    },
    "TxtMethodConfig": {
      "properties": {
        "name": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "readOnlyProperties": [
    "/properties/TxtMethodConfig",
    "/properties/Status",
    "/properties/Id",
    "/properties/Arn"
  ],
  "required": [
    "DomainName"
  ],
  "tagging": {
    "cloudFormationSystemTags": true,
    "permissions": [
      "vpc-lattice:UntagResource",
      "vpc-lattice:TagResource",
      "vpc-lattice:ListTagsForResource"
    ],
    "tagOnCreate": true,
    "tagProperty": "/properties/Tags",
    "tagUpdatable": true,
    "taggable": true
  },
  "typeName": "AWS::VpcLattice::DomainVerification"
}