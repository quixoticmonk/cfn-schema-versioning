            }
          },
          "required": [
            "Public"
          ],
          "title": "Public",
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "Vpc": {
              "$ref": "#/definitions/VpcRouterNetworkInterfaceConfiguration"
            }
          },
          "required": [
            "Vpc"
          ],
          "title": "Vpc",
          "type": "object"
        }
      ]
    },
    "RouterNetworkInterfaceState": {
      "enum": [
        "CREATING",
        "ACTIVE",
        "UPDATING",
        "DELETING",
        "ERROR",
        "RECOVERING"
      ],
      "type": "string"
    },
    "RouterNetworkInterfaceType": {
      "enum": [
        "PUBLIC",
        "VPC"
      ],
      "type": "string"
    },
    "Tag": {
      "additionalProperties": false,
      "properties": {
        "Key": {
          "type": "string"
        },
        "Value": {
          "type": "string"
        }
      },
      "required": [
        "Key",
        "Value"
      ],
      "type": "object"
    },
    "Unit": {
      "additionalProperties": false,
      "type": "object"
    },
    "VpcRouterNetworkInterfaceConfiguration": {
