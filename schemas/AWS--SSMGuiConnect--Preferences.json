        "KMSKeyArn": {
          "$ref": "#/definitions/KMSKeyArn"
        },
        "RecordingDestinations": {
          "$ref": "#/definitions/RecordingDestinations"
        }
      },
      "required": [
        "RecordingDestinations",
        "KMSKeyArn"
      ],
      "type": "object"
    }
